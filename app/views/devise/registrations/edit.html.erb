<div class="card">
  <div class="card-header">
    <h4>Edit Profile<% resource_name.to_s.humanize %></h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Enter the details below as required!</h5>
    <p class="card-text">
    <div class="field form-group">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    </p>
    <p class="card-text">
      <div class="field form-group">
    <% f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"password" %>
    <% if @minimum_password_length %>
      <i><%= @minimum_password_length %> characters minimum</i>
    <% end %>
    </div>
    </p>
    <p class="card-text">
    <div class="field form-group">
    <% f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"confirm password" %>
    </div>
    </p>
    <p class="card-text">
    <div class="field form-group">
    <% f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control", placeholder:"current password" %>
    </div>
    </p>
    <p class="card-text">
    <div class="actions">
    <%= f.submit "Update", class:"btn btn-secondary" %>
    </div>
    <% end %>
    </p>
  </div>
</div>
<br/>

<div class="card">
  <div class="card-header">
   <h4>Unhappy?</h4>
  </div>
  <div class="card-body">
    <%= button_to "Cancel my account", registration_path(resource_name), class:"btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %>
  </div>
</div>
<br/>

<%= link_to "Back", :back, class:"btn btn-primary" %>
<br/><br/>
