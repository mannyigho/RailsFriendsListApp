<br/>
<div class="jumbotron">
  <h1 class="display-6">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <br/>
  <p class="lead">
    <%= @friend.email %> &nbsp; |  &nbsp; <%= @friend.phone %>  &nbsp; |  &nbsp; <%= @friend.twitter %>
  </p>
  <br/>
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-warning btn-sm" %> &nbsp;
  <%= link_to 'Delete', @friend, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %> &nbsp; 
  <%= link_to 'Grid', friends_path, class:"btn btn-primary btn-sm" %>
</div>
